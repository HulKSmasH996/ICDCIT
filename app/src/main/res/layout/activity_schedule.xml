<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="5dp"
    android:background="@color/cardview_light_background"
    android:paddingRight="5dp"
    android:paddingTop="20dp"
    tools:context="com.kiit.viper.icdcit.Schedule"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="#ffffffff"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="day1"
        card_view:cardElevation="7dp"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/view">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/c13"/>
          <LinearLayout
              android:layout_marginTop="10dp"
              android:layout_marginLeft="30dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="25dp"
                  style="@style/AudioFileInfoOverlayText"
                  android:text="Day1"/>
              <TextView
                  android:layout_marginTop="5dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="13th January 2017"
                  android:textSize="15dp"/>
          </LinearLayout>
            <ImageView
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="#ffffffff"
        android:layout_marginTop="20dp"
        android:layout_height="80dp"
        android:layout_width="fill_parent"
        android:clickable="true"
        card_view:cardElevation="7dp"
        android:onClick="day2"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/view1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/c14"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    style="@style/AudioFileInfoOverlayText"
                    android:text="Day2"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14th January 2017"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="#ffffffff"
        android:clickable="true"
        android:onClick="day3"
        android:layout_marginTop="20dp"
        android:layout_height="80dp"
        android:layout_width="fill_parent"
        card_view:cardElevation="7dp"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/view2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/c15"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    style="@style/AudioFileInfoOverlayText"
                    android:text="Day3"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15th January 2017"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:background="#ffffffff"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:clickable="true"
        android:onClick="day4"
        card_view:cardElevation="7dp"
        card_view:cardCornerRadius="4dp"
        android:id="@+id/view3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_alignTop="@+id/view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/c16"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    style="@style/AudioFileInfoOverlayText"
                    android:text="Day4"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16th January 2017"
                    android:textSize="15dp"/>
            </LinearLayout>
            <ImageView
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/snackbarPosition">
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
